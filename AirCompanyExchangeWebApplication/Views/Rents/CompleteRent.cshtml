@model AirCompanyExchange.Model.RentViewModel
@{
    ViewBag.Title = "Complete Rent";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("CompleteRent", "Rents", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <label class="col-md-2 col-md-offset-2 control-label">Count Flights</label>
        <div class="col-md-6 ">
            <p class="form-control-static">
                @Model.RentId
            </p>
            <input id="RentId" name="RentId" value="@Model.RentId" type="hidden"/>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Feedback,
            new { @class = "col-md-2 col-md-offset-2 control-label" })
        <div class="col-md-6 ">
            @Html.TextAreaFor(m => m.Feedback, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-4">
            <input type="submit" class="form-control btn btn-default" value="Complete Rent" />
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}